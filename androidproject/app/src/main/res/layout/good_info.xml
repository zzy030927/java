<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#E5F2F8"
        >
    <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="#FFC107"
                    android:id="@+id/carName"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="150dp"
                    android:id="@+id/carSrc"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8F2F2"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="售价："
                        android:textStyle="bold"
                        android:textSize="25sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="#F62415"
                        android:textSize="25sp"
                        android:text="11111"
                        android:id="@+id/carSale"/>
            </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:text="车辆详细信息："
                        android:textStyle="bold"
                        android:textSize="25sp"/>
                <TextView
                        android:layout_width="360dp"
                        android:layout_height="match_parent"
                        android:textColor="#272424"
                        android:textSize="23sp"
                        android:id="@+id/carInfo"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <Button
                        android:layout_width="130dp"
                        android:layout_height="70dp"
                        android:text="加入购物车"
                        android:id="@+id/addInShop"
                        android:textSize="18sp"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="20dp"
                        />
                <Button
                        android:layout_width="130dp"
                        android:layout_height="70dp"
                        android:text="立即购买"
                        android:id="@+id/buy"
                        android:textSize="18sp"
                        android:layout_marginStart="85dp"
                        android:layout_marginBottom="20dp"
                        />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:id="@+id/bottom_nav_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        <LinearLayout
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/car8"
                    />
            <android.widget.Button
                    android:text="首页"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/buyCar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/car5"
                    />
            <android.widget.Button
                    android:text="购物车"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/car7"
                    />

            <android.widget.Button
                    android:text="详细信息"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/manager"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/manager"
                    />
            <android.widget.Button
                    android:text="个人中心"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>